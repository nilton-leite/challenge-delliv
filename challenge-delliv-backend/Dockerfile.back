FROM node:18-alpine as production

ARG NODE_ENV=production
ENV NODE_ENV=${NODE_ENV}

WORKDIR /usr/src/app

COPY package*.json /usr/src/app

RUN yarn global add typescript

RUN yarn install --only=production

COPY . .

RUN yarn run prisma generate
RUN yarn build

COPY . /usr/src/app

EXPOSE 3003

CMD ["yarn", "start"]
